                  <VBox alignment="TOP_CENTER" fillWidth="true" style="-fx-background-color: #bbbbff;">
                     <children>
                        <Button fx:id="abilities" mnemonicParsing="false" onAction="#handleAbilities" text="AbilitÃ©s" />
